<% content_for(:left) do %>
	<%= render :partial => "widgets/toolbar" %>

	<% widget_for 'misc' do %>
		<h4>a: buttons</h4>
		<div class="clearfix">
			<a href="#" class="button"><%= silk_image 'eye.png' %> See</a>
			<a href="#" class="button positive"><%= silk_image 'add.png' %> Add</a>
			<a href="#" class="button negative"><%= silk_image 'cancel.png' %> Cancel</a>
