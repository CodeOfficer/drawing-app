<% widget_for 'misc', :closed => 'closed' do %>
	<h4>a: buttons</h4>
	<div class="clearfix">
		<%= link_to_function "#{silk_image('eye.png')} See", '', :class => 'button' %>
		<%= link_to_function "#{silk_image('add.png')} Add", '', :class => 'button positive' %>
		<%= link_to_function "#{silk_image('cancel.png')} Cancel", '', :class => 'button negative' %>
		<%= link_to_function "#{silk_image('door_in.png')} Add Element", '', :class => 'button' %>
	</div>
	<h4>button: buttons</h4>
	<div class="clearfix">
		<% form_tag({:action => "index", :method => :get}, {:class => "form"}) do %>
			<button type="submit">Draw</button>
			<button type="submit" class="positive">Draw</button>
			<button type="submit" class="negative">Draw</button>
		<% end -%>
	</div>
	<div><%= image_tag '/images/rails.png', :id => "rails-image" %></div>
<% end %>	